<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"

    android:layout_gravity="center"
    android:background="#000"
    >

    <ImageView
        style="@style/BackGroundImageViewLoginWeb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:id="@+id/fullscreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.75"
        android:id="@+id/welcoming"
        android:orientation="vertical">

        <ImageView
            android:layout_width="240dp"
            android:layout_marginTop="65dp"
            android:layout_height="match_parent"
            android:src="@drawable/chillax_logo"
            android:background="@null"
            android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/reg_block"
            android:layout_weight="0.25"
            android:orientation="vertical"
            android:layout_marginBottom="45dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/elliptical_button">

            <AutoCompleteTextView
                android:layout_marginTop="15dp"
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:hint="@string/first_name"
                android:id="@+id/viewFirstName"
                android:fontFamily="serif"
                android:textColor="#000"

                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/elliptical_button_small"
                android:layout_marginBottom="5dp"
                />

            <AutoCompleteTextView
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:hint="@string/last_name"
                android:ems="10"
                android:id="@+id/viewLastName"
                android:fontFamily="serif"
                android:textColor="#000"

                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@drawable/elliptical_button_small"
                android:layout_marginBottom="5dp"/>

            <AutoCompleteTextView
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:inputType="textEmailAddress"
                android:hint="@string/email"
                android:ems="10"
                android:id="@+id/viewEmail"
                android:fontFamily="serif"
                android:textColor="#000"

                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@drawable/elliptical_button_small"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:hint="@string/password"
                android:ems="10"
                android:id="@+id/viewPassword"
                android:fontFamily="serif"
                android:textColor="#000"

                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/elliptical_button_small"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:inputType="none"
                android:hint="@string/birthday"
                android:ems="10"
                android:id="@+id/viewBirthday"
                android:fontFamily="serif"
                android:textColor="#000"

                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@drawable/elliptical_button_small"
                android:layout_marginBottom="10dp"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_remember_me"
                android:id="@+id/remember_me"
                android:layout_gravity="center_horizontal"
                android:fontFamily="serif"
                android:textColor="#000"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                />

            <Button
                android:layout_marginTop="5dp"
                android:text="@string/register"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonOK"
                android:onClick="onRegisterClick"
                android:fontFamily="serif"
                android:textColor="#000"
                android:textStyle="bold"
                android:background="@drawable/elliptical_button_signin"
                android:layout_gravity="center_horizontal"

                />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>