<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="exampfi.daria.chillaxlinuxtryandroid.Views.NewsActivity"
    tools:showIn="@layout/app_bar_news"
   >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/back_il"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:orientation="vertical"
        android:background="#C0FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_horizontal|center_vertical">


                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center_vertical|center_horizontal"
                    android:id="@+id/to_be_displayed"
                    android:scaleType="centerInside"
                    android:shadowColor="@color/colorAccent"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                  />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:layout_gravity="center_horizontal|clip_horizontal"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/instructions"
                android:layout_gravity="center_horizontal|clip_horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="20sp"
                android:textColor="#000"/>

        </LinearLayout>


    </LinearLayout>




</RelativeLayout>
